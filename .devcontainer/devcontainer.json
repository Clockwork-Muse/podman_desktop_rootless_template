{
	// This is a bootstrap container definition to be able to clone on podman desktop
	"name": "Bootstrap",
	"image": "mcr.microsoft.com/devcontainers/base:alpine-3.20",
	"runArgs": [
		"--userns", "keep-id",
	],
	"containerEnv": {
		"HOME": "/home/vscode",
	},
	"customizations": {
		"vscode": {
			"settings": {
				"files.insertFinalNewline": true,
				"files.trimFinalNewlines": true,
				"files.trimTrailingWhitespace": true,
			}
		}
	},
}
